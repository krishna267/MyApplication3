<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">






    <!-- inner shadow -->
<item>

<shape android:shape="rectangle">
    <corners android:radius="50dp" />
    <solid android:color="#fb3415" />
</shape>
</item>


    <!-- inner background -->
<item
android:top="2dp"
android:left="2dp">
<shape android:shape="rectangle">
    <corners android:radius="50dp" />
    <solid android:color="#c3c300" />
</shape>
</item>
    <!-- outer shine -->
    <item
        android:top="4dp"
        android:left="4dp">

        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#15fb1d" />

        </shape>
    </item>

    </layer-list>